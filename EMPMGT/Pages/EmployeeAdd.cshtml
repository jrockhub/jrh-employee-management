@page "{handler?}/{id?}"
@model EMPMGT.Pages.EmployeeAddModel
@{
}
<h1 class="h3 mb-2 text-gray-800">Add Employee</h1>
<p class="mb-5">Please fill the form</p>
 <div class="page-header">
					<div class="row">
						<div class="col-lg-6 col-md-6 col-sm-6 col-12">
							<h5 class="text-uppercase mb-0 mt-0 page-title">&nbsp;</h5>
						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 col-12">
							<ul class="breadcrumb float-right p-0 mb-0">
								<li class="breadcrumb-item"><a href="/Index"><I class="fas fa-home"></i> Home</a></li>
								<li class="breadcrumb-item"><a href="/EmployeeGrid">Employee</a></li>
								<li class="breadcrumb-item"><span> Add Employee &nbsp;</span></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="page-content">
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12 col-12">
							<div class="card">
								<div class="card-body">	
									<form method="post" enctype="multipart/form-data">
										<input asp-for="m.Id" hidden/>
										<input asp-for="m.CreationDate" hidden/>
										<input asp-for="m.IsDeleted" hidden/>
										
									
									   
									<div class="row">
										
										<div class="col-md-6">
											<div class="form-group">
                                                    <label asp-for="m.FirstName">Firstname</label> <span class="redastrix">*</span>
													<input asp-for="m.FirstName" type="text" class="form-control" required>
												</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
                                                    <label>Lastname</label> <span class="redastrix">*</span>
													<input asp-for="m.LastName" type="text" class="form-control" required>
												</div>
										</div>
									
										
									
										
										<div class="col-md-6">
											<div class="form-group">
                                                    <label>Email Address</label> <span class="redastrix">*</span>
													<input asp-for="m.Email" type="email" class="form-control" required>
												</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
                                                    <label>Date Of Birth</label> <span class="redastrix">*</span>
													<input asp-for="m.DateOfBirth" id="txtDateOfBirth" class="form-control"  type="date" required>
												</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
                                                    <label>Department</label> 
													<input asp-for="m.Department" id="txtDepartment" class="form-control"  type="text">
												</div>
										</div>
										<div class="col-md-1">
											<div class="form-group">
                                                    <label>Active Status</label> 
													<input asp-for="m.IsActive" id="chkStatus" class="custom-checkbox" type="checkbox" >
												</div>
										</div>
										
										<div class="col-lg-12 col-md-12 col-sm-12 col-12">
											
												<div class="form-group text-center custom-mt-form-group">
													<button class="btn btn-primary mr-2" type="submit">Submit</button>
													<button class="btn btn-secondary" type="reset" onclick="window.location.href = '/EmployeeGrid';">Cancel</button>
												</div>
											
										</div>
									</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>